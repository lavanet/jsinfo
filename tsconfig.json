{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
      "lib": ["ES2023"],
      "module": "esnext",
      "target": "ES2022",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"
          ]
      }
  },
  "include": [
      "src/**/*"
  ]
}